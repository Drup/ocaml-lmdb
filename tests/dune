)

(test
 (name test)
 (modules test)
 (libraries alcotest lmdb)
 (action (run %{test} -q))
)

(alias
 (name runtest)
 (action (run ./version.exe))
)

(alias
 (name bench)
 (deps bench.exe (universe))
 (action (run ./bench.exe))
)
